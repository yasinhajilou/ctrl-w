{
  "name": "ctrl-w",
  "version": "1.0.0",
  "description": "Real-time text and image sharing between devices using pairing codes",
  "main": "backend/server.js",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development nodemon backend/server.js",
    "start": "NODE_ENV=production node backend/server.js",
    "test": "NODE_ENV=test jest --coverage --verbose",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint backend/**/*.js",
    "lint:fix": "eslint backend/**/*.js --fix",
    "format": "prettier --write \"backend/**/*.js\"",
    "format:check": "prettier --check \"backend/**/*.js\""
  },
  "keywords": [
    "websocket",
    "real-time",
    "file-sharing",
    "jwt",
    "nodejs",
    "express"
  ],
  "author": "Yasin Hajilou",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "socket.io": "^4.6.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  }
}
